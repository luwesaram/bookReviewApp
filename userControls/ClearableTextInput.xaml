<UserControl x:Class="bookReviewConsoleApplication.UserControls.ClearableTextInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:bookReviewConsoleApplication.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">
    <Grid Background="White">
        <TextBox x:Name="txtInput" VerticalContentAlignment="Center" FontFamily="Consolas" 
            FontSize="16" FontWeight="Light"/>
        <TextBlock x:Name="txtPlaceholder" FontFamily="Consolas" Text="Test" FontSize="15" 
            Margin="5,0,0,0" VerticalAlignment="Center" Foreground="DarkGray"/>
        <Button x:Name="btnClear" HorizontalAlignment="Right" Width="30" Content="X" 
            Background="Transparent" Foreground="LightGray"/>
    </Grid>
</UserControl>
