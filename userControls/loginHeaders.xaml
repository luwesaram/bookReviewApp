<UserControl x:Class="bookReviewConsoleApplication.userControls.loginHeaders"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:bookReviewConsoleApplication.userControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.ColumnSpan="3" Fill="#FF252422"/>
        <Label
                Name="lblHeader"
                Grid.Column="1" 
                FontFamily="Consolas" 
                Content="NovelNotes" 
                FontSize="30" 
                FontWeight="Bold" 
                Foreground="#EB5E28" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Center"
                MouseDoubleClick="lblHeaderDoubleClick"
                Cursor="Hand"
        />
    </Grid>
</UserControl>
